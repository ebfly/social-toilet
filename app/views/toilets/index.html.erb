<%= render "shared/header" %>
<div class='main'>  
  <div class='title-contents'>
    <h2 class='service-title'>
    </h2>
  </div>
</div>

<%# 投稿一覧 %>
<ul class='toilet-lists'>
  <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
  <% if @toilets.present? %>
    <% @toilets.each do |toilet| %>
      <li class='list'>
        <%= link_to toilet_path(toilet.id) do %>
          <div class='toilet-img-content'>
            <%= image_tag toilet.image, class: 'toilet-img' %>
          </div>
          <div class='toilet-info'>
            <h3 class='toilet-name'>
              <%= toilet.name %>
            </h3>
            <h3 class='toilet-prefecture'>
              <%= toilet.prefecture.name %>
            </h3>
            <h3 class='toilet-text'>
              <%= toilet.text%>
            </h3>
          </div>
        <% end %>
      </li>
    <% end %>
        <%# //商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
        <%# 商品がない場合は以下のダミー商品が表示されるようにしましょう %>
        <%# 商品がある場合は表示されないようにしましょう %>
  <% else %>  
    <li class='list'>
      <%= link_to new_user_session_path do %>
        <%= image_tag "https://tech-master.s3.amazonaws.com/uploads/curriculums/images/Rails1-4/sample.jpg", class: "toilet-img" %>
        <div class='toilet-info'>
          <h3 class='toilet-name'>
          投稿してね！
          </h3>
        </div>
      <% end %>
    </li> 
    <%# //商品がある場合は表示されないようにしましょう %>
    <%# //商品がない場合は上記のダミー商品が表示されるようにしましょう %>
  <% end %>
</ul>
<%# 投稿一覧 %>

<%= link_to('/toilets/new', class: 'toilet-btn') do %>
  <span class='toilet-btn-text'>Toileetする</span>
<% end %>
<%= render "shared/footer" %>
